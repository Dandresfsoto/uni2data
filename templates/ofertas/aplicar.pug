extends ../base_auth


block title
    |{{title | upper}}


block side_nav_container

    ul(class="collapsible",data-collapsible="accordion")
        li(class="bold waves-effect waves-light button-menu")

            div(class="collapsible-header active")
                i(class="material-icons") local_activity
                | Breadcrums

            div(class="collapsible-body collapsible-body-blue")
                ul
                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/") Inicio
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")


                    li(class="bold waves-effect waves-light breadcrum-active")
                        a(href="#") Aplicar ofertas
                            i(class="material-icons icon-sican") check_circle

                    div(class="divider divider-perfil")




block container_principal
    div(class="container",style="margin-top:40px;")
        |{% for oferta in ofertas %}
        div(class="row")
            div(class="col s12")

                div(class="card grey lighten-4")
                    div(class="card-content")
                        span(class="card-title",style="margin-bottom:30px;")
                            b {{ oferta.cargo }}

                        p(style="margin-bottom:10px;")
                            b Perfil:
                            span(style="margin-left:10px;")
                                |{{ oferta.perfil }}

                        p(style="margin-bottom:10px;")
                            b Experiencia:
                            span(style="margin-left:10px;")
                                | {{ oferta.experiencia }}

                        p(style="margin-bottom:10px;")
                            b Tipo de contrato:
                            span(style="margin-left:10px;")
                                | {{ oferta.tipo_contrato }}

                        p(style="margin-bottom:10px;")
                            b Vacantes:
                            span(style="margin-left:10px;")
                                | {{ oferta.vacantes }}

                        p(style="margin-bottom:10px;")
                            b Municipios:
                            span(style="margin-left:10px;")
                                | {{ oferta.get_municipios_string }}


                        div(class="right-align",style="margin-top:30px;")
                            span(style="font-size:0.8rem;")
                                b Publicación:
                                |{{ oferta.creation }}

                        | {% if user|oferta_aplicacion:oferta != '' %}
                        div(class="right-align",style="")
                            p(style="margin-bottom:10px;font-size:0.8rem;")
                                span(style="margin-left:10px;")
                                    | {{ user|oferta_aplicacion:oferta }}
                        | {% endif %}

                    div(class="card-action")
                        | {% if user|oferta_aplicacion:oferta != '' %}
                        a(href="{{oferta.id}}") Editar aplicación
                        | {% else %}
                        a(href="{{oferta.id}}") Aplicar a oferta
                        | {% endif %}
        |{% endfor %}



