extends ../base_auth

block title
    |{{title | upper}}


block side_nav_container

    ul(class="collapsible",data-collapsible="accordion")
        li(class="bold waves-effect waves-light button-menu")

            div(class="collapsible-header active")
                i(class="material-icons") local_activity
                | Breadcrums

            div(class="collapsible-body collapsible-body-blue")
                ul
                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/") Inicio
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/ofertas/aplicar/") Aplicar oferta
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")



                    li(class="bold waves-effect waves-light breadcrum-active")
                        a(href="#") {{ breadcrum_active | truncatechars:22 }}
                            i(class="material-icons icon-sican") check_circle

                    div(class="divider divider-perfil")



block container_principal
    div(class="container",style="margin-top:40px;")

        div(class="oferta-container")
            h5(style="margin-bottom:30px;")
                b {{oferta.cargo}}

            p(style="margin-bottom:10px;")
                b Perfil:
                span(style="margin-left:10px;")
                    | {{ oferta.perfil }}

            p(style="margin-bottom:10px;")
                b Experiencia:
                span(style="margin-left:10px;")
                    | {{ oferta.experiencia }}

            p(style="margin-bottom:10px;")
                b Tipo de contrato:
                span(style="margin-left:10px;")
                    | {{ oferta.tipo_contrato }}

            p(style="margin-bottom:10px;")
                b Vacantes:
                span(style="margin-left:10px;")
                    | {{ oferta.vacantes }}

            p(style="margin-bottom:10px;")
                b Municipios:
                span(style="margin-left:10px;")
                    | {{ oferta.get_municipios_string }}

            div(class="right-align",style="margin-top:30px;")
                p(style="margin-bottom:10px;")
                    b Publicación:
                    span(style="margin-left:10px;")
                        | {{ oferta.creation }}

        div(style="margin-top:50px;")
            p(style="margin-bottom:50px;").
                Por favor selecciona el o los municipios a los cuales quieres aplicar, y si quieres dejanos una observación.
            |{% crispy form %}


block body_script_auth
    script.
        $(document).ready(function () {
            $("label[for='id_departamentos']").addClass('active');

            $('#id_municipios').select2();

        });