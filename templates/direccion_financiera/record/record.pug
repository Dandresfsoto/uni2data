                    div(class="divider divider-perfil")


block container_principal
    div(class="container",style="margin-top:40px;")
        |{% crispy form %}


block body_script_auth
    script.
        $(document).ready(function () {

            $("label[for='id_cuenta_contable']").addClass('active');
            $("label[for='id_numero_documento_equivalente']").addClass('active');
            $("label[for='id_numero_comprobante_pago']").addClass('active');


            $('#id_file_comprobante_egreso').dropify({
                messages: {
                    'default': 'Arrastra y suelta el documento de pago',
                    'replace': 'Arrastra y suelta el documento de pago',
                    'remove': 'Eliminar',
                    'error': 'Ooops, algo malo paso.'
                }
            });
            $('#id_fecha_pago').pickadate({
                format: 'dd/mm/yyyy',
                selectMonths: true,
                selectYears: 90,
                monthsFull: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre',
                    'Octubre', 'Noviembre', 'Diciembre'],
                weekdaysShort: ['Dom', 'Lun', 'Mar', 'Mie', 'Jue', 'Vie', 'Sab'],
                today: 'Hoy',
                clear: 'Borrar',
                close: 'Ok',
                closeOnSelect: false
            });
        });