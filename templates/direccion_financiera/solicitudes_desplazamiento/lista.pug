                    th Consecutivo
                    th Contratista
                    th Fecha
                    th Valor
                    th N° Desplazamientos
                    th Documentos
                    th Estado
            tbody
                tr
                    td Editar
                    td Consecutivo
                    td Contratista
                    td Fecha
                    td Valor
                    td N° Desplazamientos
                    td Documentos
                    td Estado


block body_script_auth
    script.

        $(document).ready(function () {

            var table = $('#table').DataTable({
                responsive: true,
                stateSave: true,
                searching: true,
                processing: true,
                serverSide: true,
                order: [[ 3, "desc" ]],
                ajax: "{{ url_datatable }}",
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.8/i18n/Spanish.json"
                },
                drawCallback: function (settings) {
                    $('.tooltipped').tooltip({delay: 50});
                }
            });

            table.on('responsive-display', function (e, datatable, row, showHide, update) {
                $('.tooltipped').tooltip({delay: 50});
            });

        });