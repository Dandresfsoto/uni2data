extends ../../base_auth

block title
    |{{title | upper}}


block side_nav_container

    ul(class="collapsible",data-collapsible="accordion")
        li(class="bold waves-effect waves-light button-menu")

            div(class="collapsible-header active")
                i(class="material-icons") local_activity
                | Breadcrums

            div(class="collapsible-body collapsible-body-blue")
                ul
                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/") Inicio
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/iraca/") IRACA
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")


                    li(class="bold waves-effect waves-light breadcrum-active")
                        a(href="#") {{ nombre_modulo | truncatechars:22 }}
                            i(class="material-icons icon-sican") check_circle

                    div(class="divider divider-perfil")



block container_principal
    div(class="container-datatable")
        table(id="table",class="display responsive no-wrap table table-striped table-bordered",width="100%")
            thead
                tr
                    th Editar
                    th Flujo de caja
                    th Identificación de proyectos
                    th Creación
                    th Tipo
                    th Código
                    th Nombre proyecto
                    th Municipio
                    th Hogares
                    th Valor
                    th Excel
                    th Estado
                    th Observaciones
            tbody
                tr
                    td Editar
                    td Flujo de caja
                    td Identificación de proyectos
                    td Creación
                    td Tipo
                    td Código
                    td Nombre proyecto
                    td Municipio
                    td Hogares
                    td Valor
                    td Excel
                    td Estado
                    td Observaciones


block body_script_auth
    script.

        $(document).ready(function () {

            var table = $('#table').DataTable({
                responsive: true,
                stateSave: true,
                searching: true,
                processing: true,
                serverSide: true,
                order: [[ 11, "desc" ]],
                columnDefs: [{"orderable": false, "targets": [0,1,2]}],
                ajax: "{{ url_datatable }}",
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.8/i18n/Spanish.json"
                },
                drawCallback: function (settings) {
                    $('.tooltipped').tooltip({delay: 50});
                }
            });

            table.on('responsive-display', function (e, datatable, row, showHide, update) {
                $('.tooltipped').tooltip({delay: 50});
            });


        });