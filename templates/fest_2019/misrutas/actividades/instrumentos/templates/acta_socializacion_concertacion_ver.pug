extends ../../../../../base_auth

block title
    |{{title | upper}}


block side_nav_container

    ul(class="collapsible",data-collapsible="accordion")
        li(class="bold waves-effect waves-light button-menu")

            div(class="collapsible-header active")
                i(class="material-icons") local_activity
                | Breadcrums

            div(class="collapsible-body collapsible-body-blue")
                ul
                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/") Inicio
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/iraca/") IRACA
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")


                    li(class="bold waves-effect waves-light")
                        a(href="{{ url_ruta_breadcrum }}") {{ ruta_breadcrum }}
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")


                    li(class="bold waves-effect waves-light")
                        a(href="../../../../") Actividades: {{ breadcrum_1 | truncatechars:15 }}
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")


                    li(class="bold waves-effect waves-light")
                        a(href="../../") {{ breadcrum_2 | truncatechars:22 }}
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")





                    li(class="bold waves-effect waves-light breadcrum-active")
                        a(href="#") Ver: {{ breadcrum_active | truncatechars:20 }}
                            i(class="material-icons icon-sican") check_circle

                    div(class="divider divider-perfil")



block container_principal
    div(class="container container-form",style="margin-top:20px;")

        div(class="row")
            div(class="col s12")
                fieldset(style="margin:0;padding-left:0;")
                    legend {{objeto.nombre}}:

        div(class="row")
            div(class="col s12")
                table(class="striped bordered",width="100%")
                    tbody
                        tr
                            td(style="font-weight:bold") Fecha de diligenciamiento:
                            td {{ objeto.fecha_diligenciamiento }}
                            td(style="font-weight:bold") Lugar:
                            td {{ objeto.lugar }}


                        tr
                            td(style="font-weight:bold") Hora:
                            td(colspan="3") {{ objeto.hora }}


                        tr
                            td(style="font-weight:bold") Municipio:
                            td {{ objeto.municipio }}
                            td(style="font-weight:bold") Departamento:
                            td {{ objeto.municipio.departamento }}

                        tr
                            td(style="font-weight:bold") Resguardo / Consejo:
                            td {{ objeto.resguado_indigena_consejo_comunitario }}
                            td(style="font-weight:bold") Nombre de la comunidad:
                            td {{ objeto.nombre_comunidad }}


                        tr
                            td(style="font-weight:bold") Nombre interlocutor de la comunidad:
                            td {{ objeto.nombre_representante }}
                            td(style="font-weight:bold") Datos de contacto:
                            td {{ objeto.datos_contacto_representante }}


        div(class="row")
            div(class="col s12")
                fieldset(style="margin:0;padding-left:0;")
                    legend Acta escaneada:

        div(class="row")

            div(class="col s12")
                embed(src="{{objeto.url_file}}",type="application/pdf",width="100%",height="700px")

        div(class="row")
            div(class="col s12")
                fieldset(style="margin:0;padding-left:0;")
                    legend Lista de asistencia:

        div(class="row")

            div(class="col s12")
                embed(src="{{objeto.url_file2}}",type="application/pdf",width="100%",height="700px")


        div(class="row")
            div(class="col s12")
                fieldset(style="margin:0;padding-left:0;")
                    legend Registro fotografico:

        div(class="row")

            div(class="col s12 m6 l3")
                img(src="{{objeto.url_foto1}}",class="materialboxed",style="width:100%;")

        div(class="row")

            div(class="col s12 m6 l3")
                img(src="{{objeto.url_foto2}}",class="materialboxed",style="width:100%;")


