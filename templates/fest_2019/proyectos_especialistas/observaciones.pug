extends ../../base_auth

block title
    |{{title | upper}}


block side_nav_container

    ul(class="collapsible",data-collapsible="accordion")
        li(class="bold waves-effect waves-light button-menu")

            div(class="collapsible-header active")
                i(class="material-icons") local_activity
                | Breadcrums

            div(class="collapsible-body collapsible-body-blue")
                ul
                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/") Inicio
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/iraca/") IRACA
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")


                    li(class="bold waves-effect waves-light")
                        a(href="/iraca/proyectos_monitoreo/") {{ nombre_modulo | truncatechars:22 }}
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light breadcrum-active")
                        a(href="#") Observaciones: {{ breadcrumb_active| truncatechars:10 }}
                            i(class="material-icons icon-sican") check_circle

                    div(class="divider divider-perfil")



block container_principal
   div(class="row",style="margin-top:40px;padding: 0px 60px;")
       |{% if observaciones|length == 0 %}

       div(class="timeline")
           div(class="timeline__group")
               div(class="timeline__box")
                   div(class="timeline__date")
                       span(class="timeline__day") 1
                       span(class="timeline__month") ENE
                   div(class="timeline__post")
                       div(class="timeline__content")
                           p No hay observaciones para este proyecto


       |{% else %}

       div(class="timeline")
           div(class="timeline__group")

               |{% for observacion in observaciones %}

               div(class="timeline__box")
                   div(class="timeline__date")
                       span(class="timeline__day") {{ observacion.get_day }}
                       span(class="timeline__month") {{ observacion.get_mes }}
                   div(class="timeline__post")
                       div(class="timeline__content")
                           p
                               strong Hora:&nbsp;
                               | {{ observacion.get_hora }}
                           p
                                strong Estado:&nbsp;
                                | {{ observacion.estado }}
                           p
                               strong Usuario:&nbsp;
                               | {{ observacion.user }}
                           p
                               strong Observacion:&nbsp;
                               | {{ observacion.descripcion }}


               |{% endfor %}
       |{% endif %}


