block container_principal

    div(class="fixed-action-btn")
        a(class="btn-floating btn-large red")
            i(class="large material-icons") dehaze

        ul
            li
                a(href="trazabilidad/",class="btn-floating green tooltipped",data-position="top",data-delay="50",data-tooltip="Ver trazabilidad")
                    i(class="large material-icons") remove_red_eye

            |{% if permiso_calificacion %}

            li
                a(href="calificar/",class="btn-floating pink darken-4 tooltipped",data-position="top",data-delay="50",data-tooltip="Calificar")
                    i(class="large material-icons") check_circle

            |{% endif %}

    div(class="container container-form",style="margin-top:40px;")

        |{% if objeto != None %}

        div(class="row")
            div(class="col s12")
                fieldset(style="margin:0;padding-left:0;")
                    legend {{objeto.entregable.nombre}}:

        div(class="row")
            div(class="col s12")
                p(style="display:inline;margin-right:5px;")
                    b Actualmente:
                | {{ objeto.pretty_print_url_file | safe }}

            div(class="col s12")
                |{% if objeto.get_extension == 'png' or objeto.get_extension == 'jpg' or objeto.get_extension == 'jpeg' %}
                img(src="{{objeto.url_file}}",class="materialboxed",style="width:100%;")
                |{% elif objeto.get_extension == 'pdf' %}
                embed(src="{{objeto.url_file}}",type="application/pdf",width="100%",height="500px")
                | {% else %}
                iframe(style="width: 100%;height: 500px;",src="https://docs.google.com/gview?url={{ request.scheme }}://{{ request.get_host }}{{objeto.url_file}}&embedded=true")
                |{% endif %}
        |{% endif %}

