extends ../base_no_auth

block title
    |Verificar cuenta

block body_content_no_auth
    div(class="parallax-container parallax-container-registro")
        div(class="parallax")
            //img(src="{% static 'img/education1.jpg'%}")

            div(class="element-with-video-bg jquery-background-video-wrapper",style="height:100%;")
                video(class="my-background-video jquery-background-video",loop,autoplay,muted)
                    source(src="{% static 'video/activar_cuenta.mp4'%}",type="video/mp4",style="opacity:0.3;")

        div(class="parallax-registro")
            div(class="container")
                div(class="row")
                    div(class="col s12 m6 offset-m3 l8 offset-l2 center-align")
                        div(class="hide",id="description-login",style="margin-top:70px;")
                            object(class="responsive-img",type="image/svg+xml",data="{% static 'img/op.svg'%}")
                            p(class="white-text content-login").
                                Sistema de información SION

                div(class="row center")
                    div(class="col s12")
                        div(class="hide",id="cuenta-activa")
                            h5(class="white-text") {{ mensaje }}

                div(class="row center")
                    div(class="col s4 offset-s4")
                        div(class="hide",id="boton-login")
                            a(href="/login/" class="waves-effect waves-light btn orange darken-3") Iniciar sesión


block body_script
    script.
        $(document).ready(function () {
            $('.parallax').parallax();
            $('.tooltipped').tooltip({delay: 50});

            $('#login-container').removeClass('hide');
            $('#description-login').removeClass('hide');
            $('#cuenta-activa').removeClass('hide');
            $('#boton-login').removeClass('hide');

            $('#login-container').addClass('animated zoomIn');
            $('#description-login').addClass('animated fadeInLeft');
            $('#cuenta-activa').addClass('animated fadeInRight');
            $('#boton-login').addClass('animated fadeInRight');

            $('.my-background-video').bgVideo();

        });