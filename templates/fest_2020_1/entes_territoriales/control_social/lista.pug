        li(class="bold waves-effect waves-light button-menu")

            div(class="collapsible-header active")
                i(class="material-icons") local_activity
                | Breadcrums

            div(class="collapsible-body collapsible-body-blue")
                ul
                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/") Inicio
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/iraca_2021/") IRACA
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/iraca_2021/entes_territoriales_2020/") Entes territoriales
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light breadcrum-active")
                        a(href="#") Comite de Control Social
                            i(class="material-icons icon-sican") check_circle

                    div(class="divider divider-perfil")

    |{% if permiso_crear %}

    ul(class="collapsible",data-collapsible="accordion")
        li(class="bold waves-effect waves-light button-menu")

            div(class="collapsible-header active")
                i(class="material-icons") call_to_action
                | Acciones


            div(class="collapsible-body collapsible-body-blue")
                ul
                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="crear/") Nueva gestión
                            i(class="material-icons icon-sican") file_upload

                    div(class="divider divider-perfil")

    |{% endif %}

    ul(class="collapsible",data-collapsible="accordion")
        li(class="bold waves-effect waves-light button-menu")

            div(class="collapsible-header active")
                i(class="material-icons") assessment
                | Reportes

            div(class="collapsible-body collapsible-body-blue")
                ul
                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="reporte/") Estado de hitos
                            i(class="material-icons icon-sican") view_list

                    div(class="divider divider-perfil")


block container_principal
    div(class="container-datatable")
        table(id="table",class="display responsive no-wrap table table-striped table-bordered",width="100%")
            thead
                tr
                    th Hitos
                    th Contactos
                    th Departamento
                    th Municipio
                    th Fecha de actualización
                    th Encargado
            tbody
                tr
                    td Hitos
                    td Contactos
                    td Departamento
                    td Municipio
                    td Fecha de actualización
                    td Encargado


block body_script_auth
    script.

        $(document).ready(function () {

            var table = $('#table').DataTable({
                responsive: true,
                stateSave: true,
                searching: true,
                processing: true,
                serverSide: true,
                order: [[ 4, "asc" ]],
                ajax: "{{ url_datatable }}",
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.8/i18n/Spanish.json"
                },
                drawCallback: function (settings) {
                    $('.tooltipped').tooltip({delay: 50});
                }
            });

            table.on('responsive-display', function (e, datatable, row, showHide, update) {
                $('.tooltipped').tooltip({delay: 50});
            });

        });