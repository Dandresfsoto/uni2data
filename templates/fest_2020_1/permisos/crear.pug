block body_script_auth
    script.
        $(document).ready(function () {

            $("label[for='id_user']").addClass('active');
            $("label[for='id_rutas_ver']").addClass('active');
            $("label[for='id_rutas_preaprobar']").addClass('active');
            $("label[for='id_rutas_aprobar']").addClass('active');

            $('#id_user').select2({
                ajax: {
                    url: '{{ url_usuarios }}',
                    dataType: 'json',
                    processResults: function (data) {
                        return {
                            results: data.results
                        };
                    },
                    cache: true
                },
                minimumInputLength: 1,
            });
            $('#id_rutas_ver').select2({
                ajax: {
                    url: '{{ url_rutas }}',
                    dataType: 'json',
                    processResults: function (data) {
                        return {
                            results: data.results
                        };
                    },
                    cache: true
                },
                minimumInputLength: 1,
            });
            $('#id_rutas_preaprobar').select2({
                ajax: {
                    url: '{{ url_rutas }}',
                    dataType: 'json',
                    processResults: function (data) {
                        return {
                            results: data.results
                        };
                    },
                    cache: true
                },
                minimumInputLength: 1,
            });
            $('#id_rutas_aprobar').select2({
                ajax: {
                    url: '{{ url_rutas }}',
                    dataType: 'json',
                    processResults: function (data) {
                        return {
                            results: data.results
                        };
                    },
                    cache: true
                },
                minimumInputLength: 1,
            });
        });