                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light")
                        a(href="/iraca_new/") IRACA
                            i(class="material-icons icon-sican") keyboard_arrow_right

                    div(class="divider divider-perfil")

                    li(class="bold waves-effect waves-light breadcrum-active")
                        a(href="#") Liquidaciones
                            i(class="material-icons icon-sican") check_circle

                    div(class="divider divider-perfil")

block container_principal
    div(class="container-datatable")
        table(id="table",class="display responsive no-wrap table table-striped table-bordered",width="100%")
            thead
                tr
                    th Generar
                    th Codigo
                    th Contratista
                    th Cargo
                    th Valor
                    th Informe de actividades
                    th Estado Informe actividades
                    th Liquidacion
                    th Liquidacion firmada
                    th Acciones
                    th Historial
            tbody
                tr
                    td Generar
                    td Codigo
                    td Contratista
                    td Cargo
                    td Valor
                    td Informe de actividades
                    td Estado Informe actividades
                    td Liquidacion
                    td Liquidacion firmada
                    td Acciones
                    td Historial


block body_script_auth
    script.

        $(document).ready(function () {

            var table = $('#table').DataTable({
                responsive: true,
                stateSave: true,
                searching: true,
                processing: true,
                serverSide: true,
                ajax: "{{ url_datatable }}",
                order: [[ 2, "desc" ]],
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.8/i18n/Spanish.json"
                },
                drawCallback: function (settings) {
                    $('.tooltipped').tooltip({delay: 50});
                }
            });

            table.on('responsive-display', function (e, datatable, row, showHide, update) {
                $('.tooltipped').tooltip({delay: 50});
            });

        });